<%= form_with model: @produto, method: :post, local: true do |form| %>
    Caso não queira deixar seu produto em promoção, coloque um zero no campo Desconto e deixe o campo Data vazio
    <div class="vendedor_show">
        <div class="janela_produto">
            <div class="barra_azul">
                <img src="<%= asset_path('icone-windows.jpg') %>" alt="iconezinho windows">
                            
                <%=". Novo produto"%>
                <div class="botao-exit">
                    <%= form_with url: vendedor_path(@vendedor), method: :get, local: true do %>
                        <button type="submit">
                            <span>X</span>
                        </button>
                    <% end %>
                </div>
            </div>

            <div class="janela_produto_data">
                <div class="imagem">
                    <img src="<%= asset_path('windows_!_icon.png') %>" alt="iconezinho windows">
                </div>

                <div class="data">
                    <div class="field">
                        <%= form.label :nome, "Nome do Produto" %>
                        <%= form.text_field :nome, required: true%>
                    </div>

                    <div class="field">
                        <%= form.label :descricao, "Descrição do Produto" %>
                        <%= form.text_area :descricao, required: true %>
                    </div>

                    <div class="field">
                        <%= form.label :preco, "Preço (R$)" %>
                        <%= form.number_field :preco, step: 0.01, required: true %>
                    </div>

                    <div class="field">
                        <%= form.label :emEstoque, "Quantidade em Estoque" %>
                        <%= form.number_field :emEstoque, required: true %>
                    </div>

                    <div class="field">
                        <%= form.label :categorium_id, "Categoria" %>
                        <%= form.collection_select :categorium_id, @categoria, :id, :nome, prompt: "Selecione uma categoria", required: true %>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="janela_review">
            <div class="barra_azul">
                <%=". Promoção?"%>

                <div class="botao-exit">
                    <button type="submit">
                        <span>X</span>
                    </button>
                </div>
            </div>
            <div class="review_data">
                <div class="caixa_atributo_valor">
                    <div class="atributo">
                        Desconto (%)
                    </div>
                    <%= form.number_field :desconto, step: 1, min: 0, max: 100 %>
                </div>

                <div class="caixa_atributo_valor">
                    <div class="atributo">
                        Data de término
                    </div>
                    <%= form.date_field :dataFim %>
                </div>
            </div>
        </div>

        <div class="actions">
            <%= form.submit "Criar Produto" %>
        </div>
    </div>
<% end %>

<div class="footer">
    <div>
        <img src="<%= asset_path('windows-logo.png') %>" alt="logo windows">
    </div>
</div>