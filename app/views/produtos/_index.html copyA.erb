# app/views/produtos/_index.html.erb
<%= form_with url: search_pages_path, method: :get, remote: true do |form| %>
  <%= form.text_field :q, placeholder: "Pesquisar produtos..." %>
  <%= form.submit "Buscar" %>
<% end %>

<ul>
  <% produtos.each do |produto| %>
    <li><%= link_to "#{produto.nome} que custa #{produto.preco} ", produto_path(produto) %></li>
  <% end %>
</ul>
